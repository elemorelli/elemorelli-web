---
import { SEO } from "astro-seo";

export interface Props {
  title?: string;
}

const resolvedImageWithDomain = new URL("/opengraph.jpg", Astro.url).toString();
const { title } = Astro.props;
---

<!doctype html>
<html lang="es-AR">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, height=device-height, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0"
    />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />

    <SEO
      title="Ele Morelli"
      description="Ele Morelli"
      twitter={{
        creator: "@elemorelli",
        site: "@elemorelli",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          type: "website",
          title: `Ele Morelli`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Ele Morelli Screenshot",
        },
      }}
    />
  </head>
  <body class="w-full h-full bg-slate-900 overflow-hidden">
    <slot />
    <style is:global>
      @font-face {
        font-family: "streamster";
        src:
          url("/fonts/streamster.woff") format("woff"),
          url("/fonts/streamster.woff2") format("woff2");
      }
      @font-face {
        font-family: "montserrat";
        src:
          url("/fonts/montserrat.woff") format("woff"),
          url("/fonts/montserrat.woff2") format("woff2");
      }

      * {
        margin: auto;
        padding: 0;
        cursor: default;
        user-select: none;
      }
      html,
      body {
      }
    </style>
  </body>
</html>
