---
import Layout from "@layouts/Layout.astro";
const title = "404";
---

<Layout title={title}>
  <div class="flex items-center justify-center min-h-screen">
    <div class="text-center">
      <h1 class="text-6xl font-bold text-gray-200 mb-4">404</h1>
      <p class="text-xl text-gray-400 mb-8">Oops! The page you're looking for doesn't exist.</p>
      <a href="/" class="text-blue-500 hover:underline">Go back to the homepage</a>
    </div>
  </div>
</Layout>
