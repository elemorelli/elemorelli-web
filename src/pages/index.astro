---
import Layout from "@layouts/Layout.astro";
import Logo from "@components/Logo.astro";
import Floor from "@components/Floor.astro";
import Sky from "@components/Sky.astro";
import MountainRange from "@components/MountainRange.astro";
import Contact from "@components/Contact.astro";

const mountain = [...Array(8).keys()];
---

<Layout>
  <main>
    <Logo />
    <Floor />
    <Sky />
    <MountainRange />
    <Contact />
  </main>
</Layout>

<script></script>

<style>
  #grid {
    transform: perspective(60vh) rotateX(75deg) translateY(-6.25vh);
  }

  #mountain div {
    clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
  }
  .stars {
    width: 1px;
    height: 1px;
    background: #fff;
    position: absolute;
  }
</style>
